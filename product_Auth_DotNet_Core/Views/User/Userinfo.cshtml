@model User

<div class="container my-5">
    <div class="row justify-content-center">
        <!-- Profile Card Column -->
        <div class="col-md-4">
            <div class="card text-center shadow-lg">
                <div class="card-body">
                    <img src="https://img.freepik.com/free-vector/blue-circle-with-white-user_78370-4707.jpg?t=st=1737899163~exp=1737902763~hmac=ce9d32a944e641360ee8debf70f0713f038a2a4bba8337b7c03aa79d093cf4a3&w=740" alt="User Profile Picture" class="img-fluid rounded-circle mb-3">
                    <h3 class="card-title">@Model.Username</h3>
                    <p class="text-muted">@Model.Role</p>
                    <a asp-action="Edit" asp-controller="User" asp-route-id="@Model.Id" class="btn btn-primary">Edit Profile</a>
                </div>
            </div>
        </div>

        <!-- User Details Table Column -->
        <div class="col-md-8">
            <h2 class="mb-4">User Details</h2>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Role</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Username</td>
                            <td>@Model.Role</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-controller="User" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons (Optional) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

